<?xml version="1.0" encoding="utf-8"?>
    <HorizontalScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/ll0"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tlAbesen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/view2">

                <TableRow
                    android:background="#4CAF50"
                    android:padding="5dp"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Preview"
                        android:textColor="@color/white"
                        />
                </TableRow>

                <TableRow
                    android:background="#ffffff"
                    android:weightSum="100"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:text="No" />
                    <TextView
                        android:id="@+id/tvnoSOtbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="100"
                        android:text="" />
                </TableRow>
                <TableRow
                    android:id="@+id/tr_keterangan"
                    android:background="#ffffff"
                    android:weightSum="100"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:text="Desc" />
                    <TextView
                        android:id="@+id/tvkettbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="100"
                        android:text="" />
                </TableRow>
                <TableRow
                    android:background="#ffffff"
                    android:weightSum="100"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:text="Item" />
                    <TextView
                        android:id="@+id/tvItemtbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_weight="100"
                        android:text="" />
                </TableRow>
                <TableRow
                    android:id="@+id/tr_neared"
                    android:background="#ffffff"
                    android:weightSum="100"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:text="Sum Amount" />
                    <TextView
                        android:id="@+id/tvSumAmount"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:text="" />
                </TableRow>
                <TableRow
                    android:background="#ffffff"
                    android:weightSum="100"
                    android:padding="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:padding="5dp"
                        android:text="Status" />
                    <TextView
                        android:id="@+id/tvStatus"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="100"
                        android:text="" />
                </TableRow>
            </TableLayout>
            </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TableLayout
        android:id="@+id/tlProductQty"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </TableLayout>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>
</HorizontalScrollView>
